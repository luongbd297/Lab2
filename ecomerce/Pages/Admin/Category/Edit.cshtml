@page
@model ecomerce.Pages.Admin.Category.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="my-4 text-center">Edit Category</h1>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form class="row g-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="col-12">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" required class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" required class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="col-12"><div class="mb-3" style="color:red">@ViewBag.notice</div></div>
            <div class="col-12 d-flex justify-content-evenly">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
          </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
