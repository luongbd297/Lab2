@page
@model ecomerce.Pages.Admin.Supplier.IndexModel

@{
    ViewData["Title"] = "Supplier Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!-- Modal add -->
<form method="post">
    <div class="modal fade" id="modalAdd" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Create New Supplier</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Supplier.CompanyName" class="form-label">Company Name</label>
                        <input asp-for="Supplier.CompanyName" required class="form-control" />
                        <span asp-validation-for="Supplier.CompanyName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Supplier.Address" class="form-label">Address</label>
                        <input asp-for="Supplier.Address" required class="form-control" />
                        <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Supplier.Phone" class="form-label">Phone</label>
                        <input asp-for="Supplier.Phone" required type="number" class="form-control" />
                        <span asp-validation-for="Supplier.Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3" style="color:red">@ViewBag.notice</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="container my-5">
    <h1 class="text-center">Suppliers</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdd">
        Create New
    </button>

    <!-- Supplier table -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Suppliers)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.SupplierId" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script src="~/js/site.js"></script>
