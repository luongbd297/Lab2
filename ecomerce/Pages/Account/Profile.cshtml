@page
@model ecomerce.Pages.Account.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
@addTagHelper *, AuthoringTagHelpers
@using Models;

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Profile</h1>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.UserName)</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.FullName)</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Address)</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Phone)</dd>

                <dt class="col-sm-3">Account Type:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Type)</dd>
            </dl>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="d-flex justify-content-between">
                @*<a class="btn btn-primary" asp-page="../Edit" asp-route-id="@Model.Account?.AccountId">Edit</a>*@
                <a class="btn btn-secondary" asp-page="../Index">Back to List</a>
            </div>
        </div>
    </div>
</div>