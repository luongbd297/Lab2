@page
@model ecomerce.Pages.Customer.IndexModel

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1>Your Orders</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Required Date
                    </th>
                    <th>
                        Shipped Date
                    </th>
                    <th>
                        Ship Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order)
                {
                    <tr>
                        <td>
                            @item.OrderDate.Value.ToShortDateString()
                        </td>
                        <td>
                            @item.RequiredDate.Value.ToShortDateString()
                        </td>
                        <td>
                            @if(item.ShippedDate.HasValue){
                                @item.ShippedDate.Value.ToShortDateString()
                            }else{
                                <span>Not shipped yet</span>
                            }
                        </td>
                        <td>
                            @item.ShipAddress
                        </td>
                        <td>
                            <a asp-page="./OrderDetails" asp-route-id="@item.OrderId" class="btn btn-primary btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Custom styles (if needed) */
</style>

<script>
    // JavaScript code here (if any)
</script>
